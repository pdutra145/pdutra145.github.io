{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch edge",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}/frontend"
    },
    {
      "cwd": "${workspaceFolder}/frontend",
      "command": "gatsby clean && gatsby develop",
      "name": "Run npm start",
      "request": "launch",
      "type": "node-terminal",
      "envFile": "${workspaceFolder}/frontend/.env"
    },
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "python": "D:\\Programs\\my-personal-website\\backend\\.venv\\Scripts\\python.exe",
      "envFile": "${workspaceFolder}/backend/.env",
      "cwd": "${workspaceFolder}/backend",
      "args": [
        "--app",
        "app",
        "run",
        "--debug"
        // "--no-debugger",
        // "--no-reload"
      ],
      "jinja": true,
      "justMyCode": true
    }
  ],
  "compounds": [
    {
      "name": "Debug App",
      "configurations": ["Python: Flask", "Run npm start", "Launch edge"],
      //   "preLaunchTask": "Python: Flask",
      "stopAll": true
    }
  ]
}
